body {
    font-family: 'Fredoka One', cursive;
    text-align: center;
}

#header {
    text-align: center;
    background-color: #4caf50;
    color: white;
    padding: 10px;
}

#header h1 {
    margin: 0;
    font-size: 24px;
}

#score-board {
    display: flex;
    justify-content: space-around;
    margin-top: 10px;
}

#score-board img {
    width: 20px;
    height: 20px;
    vertical-align: middle;
    margin-right: 5px;
}

#progress-bar {
    width: 80%;
    height: 20px;
    background: #ddd;
    border-radius: 10px;
    overflow: hidden;
    margin: 10px auto;
}

#progress {
    width: 0;
    height: 100%;
    background: #4caf50;
    transition: width 0.5s;
}

button {
    background-color: #4caf50;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    transition-duration: 0.4s;
    cursor: pointer;
}

