    height: 80vh;
    width: 100%;
    position: relative;
    overflow: hidden;
    background-color: #f0f0f0;
}

.coin {
    position: absolute;
    width: 50px;
    height: 50px;
    cursor: pointer;
}

.increment {
    position: absolute;
    animation: fadeOut 1s forwards;
    font-size: 18px;
    color: red;
}

.increment.score {
    top: -30px; /* Adjust position above the coin */
}

.increment.bonus {
    top: -30px; /* Adjust position above the coin */
    color: gold;
}

#tasks-section,
#invite-friend-section {
    padding: 20px;
    background: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 10px;
    width: 80%;
    margin: 10px auto;
    text-align: center;
}

