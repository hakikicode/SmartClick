    overflow: hidden;
    background: #f9f9f9;
    border-radius: 10px;
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.1);
    background: url('background.png'); /* Optional: Add a background image */
    background-size: cover;
    background-position: center;
}

.coin {
    position: absolute;
    width: 50px;
    height: 50px;
    cursor: pointer;
    user-select: none;
    transition: transform 0.1s;
}

