    overflow: hidden;
}

.container {
    text-align: center;
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    width: 90%;
    max-width: 400px;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

h1 {
    margin: 0 0 20px;
    color: #333;
    font-size: 2em;
    font-weight: bold;
    background: linear-gradient(to right, #f953c6, #b91d73);
    -webkit-background-clip: text;
